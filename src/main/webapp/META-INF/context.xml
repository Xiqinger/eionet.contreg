<?xml version="1.0" encoding="UTF-8"?>
<Context path="/cr3">
  <Logger className="org.apache.catalina.logger.FileLogger" prefix="cr3." suffix=".txt" timestamp="true"/>
  <!-- This configuration assumes Apache Commons DBCP is used. Tomcat DBCP has different parameters
         removeAbandoned is for version 1, removeAbandonedOnMaintenance is for version 2.
     -->
  <Resource auth="Container" description="Connection used by the harvester" driverClassName="virtuoso.jdbc4.Driver" logAbandoned="false" maxActive="40" maxIdle="10" maxWait="10000" name="jdbc/readWriteRepo" password="${virtuoso.db.pwd}" removeAbandoned="true" removeAbandonedOnMaintenance="true" removeAbandonedTimeout="300" timeBetweenEvictionRunsMillis="300000" type="javax.sql.DataSource" url="${virtuoso.db.url}" username="${virtuoso.db.usr}">
    </Resource>
  <Resource auth="Container" description="Connection for READ-ONLY queries (sparql endpoint, factsheets)" driverClassName="virtuoso.jdbc4.Driver" maxActive="40" maxIdle="10" maxWait="10000" name="jdbc/readOnlyRepo" password="${virtuoso.db.ropwd}" type="javax.sql.DataSource" url="${virtuoso.db.url}" username="${virtuoso.db.rousr}">
    </Resource>
</Context>
